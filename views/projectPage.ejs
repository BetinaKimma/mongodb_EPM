<!DOCTYPE html>
<html lang="en">

<%- include('layouts/header'); -%>

<body>
<%- include('layouts/navbarHome'); -%>
<!-- Page Header -->

<div class="img-apply">

    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <h1>Projekter</h1>
          <br>
          <!-- BKS: kilden for denne kode: https://ejs.co/ fundet 10/05-20 -->
          <!-- samt https://www.youtube.com/watch?v=3fF4t-s7KXY 09/05-2020 (og modificeret) -->
          <ul>
            <% projects.forEach(function(user){ %>
              <li><a href="/user/projectPage/?projectName=<%= user.projectName %>"><%= user.projectName %></a></li>
            <%});%>
          </ul>
        </div>
      </div>
    </div>



  <form action="/user/projectPage" method="POST">
    <div id="contactForm" class="apply-container">
    <h1>Opret projekt</h1>
    <input type="hidden" id="profileId" name="profileId" value="<%= userId %>">
    <label for="projectId"><b>Projekt Id</b></label>
    <input type="text" placeholder="projekt Id" name="projectId" id="projectId" class="inputField" required>

    <label for="projectName"><b>Projektnavn</b></label>
    <input type="text" name="projectName" id="projectName" class="inputField" placeholder="Projekt navn" required>

    <label for="projectDate"><b>Dato</b></label>
    <input type="text" name="projectDate" id="projectDate" class="inputField" placeholder="Dato" required>

    <label for="projectManager"><b>Manager navn</b></label>
    <input type="text" name="projectManager" id="projectManager" class="inputField" placeholder="Projekt leder" required>

    <label for="projectDescription"><b>Beskrivelse</b></label>
    <textarea type="text" id="projectDescription" name="projectDescription" class="inputField" required></textarea>

    <button>Opret projekt</button>
    </div>
  </form>

</div>

</body>

<%- include('layouts/scripts'); -%>

</html>